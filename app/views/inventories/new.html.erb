<div class="container mt-4">
  <h2>Scan Barcode to Add to Inventory</h2>
  
  <%= form_with model: @inventory, url: inventories_path, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :barcode, "Enter Barcode", class: "form-label" %>
      <%= f.text_field :barcode, class: "form-control", required: true %>
    </div>
    <%= f.submit "Add to Inventory", class: "btn btn-primary" %>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger mt-3"><%= flash[:alert] %></div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert alert-success mt-3"><%= flash[:notice] %></div>
  <% end %>
</div>
