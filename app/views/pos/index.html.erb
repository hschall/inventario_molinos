<%= link_to "Nuevo Registro", new_po_path, class: "btn btn-primary", style: "background-color: #4f98bf; border: none; padding: 4px 10px; font-size: 0.85rem;" %>

<div class="container-fluid mt-5">
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle text-center w-150" style="border-radius: 7px; overflow: hidden; font-size: 0.75rem;">
      <thead>
        <!-- Full-width header row with custom color -->
        <tr>
          <th colspan="8" class="text-white text-start px-2.5 py-1 fw-normal" style="background-color: #1b5892; font-size: 0.95rem;">Sucursales</th>
        </tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Ruta</th>
        <th>Direccion</th>
        <th>CP</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @pos.each do |po| %>
      <tr>
        <td><%= po.id %></td>
        <td><%= po.name %></td>
        <td><%= po.ruta %></td>
        <td><%= po.address %></td>
        <td><%= po.cp %></td>
         <div class="center">
        <td><%= link_to "Ver", po, class: "btn btn-outline-info btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %></td>
        <td><%= link_to "Editar", edit_po_path(po), class: "btn btn-outline-info btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %></td>
        <td><%= button_to "Eliminar", po, method: :delete, class: "btn btn-outline-danger btn-sm", onclick: "return confirm('Are you sure?');", style: "padding: 2px 6px; font-size: 0.75rem;" %></td>
        
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

