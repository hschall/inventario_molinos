<%= link_to "Nuevo Registro", new_warehouse_path, class: "btn btn-sm text-white", style: "background-color: #4f98bf; border: none; padding: 4px 10px; font-size: 0.85rem;" %>

<div class="container-fluid mt-5">
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle text-center w-150" style="border-radius: 7px; overflow: hidden; font-size: 0.75rem;">
      <thead>
        <!-- Full-width header row with custom color -->
        <tr>
          <th colspan="7" class="text-white text-start px-2.5 py-1 fw-normal" style="background-color: #1b5892; font-size: 0.95rem;">CEDIS</th>
        </tr>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Direccion</th>
          <th>CP</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @warehouses.each do |warehouse| %>
        <tr>
          <td><%= warehouse.id %></td>
          <td><%= warehouse.name %></td>
          <td><%= warehouse.address %></td>
          <td><%= warehouse.cp %></td>
          <td><%= link_to "Ver", warehouse, class: "btn btn-outline-info btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %></td>
          <td><%= link_to "Editar", edit_warehouse_path(warehouse), class: "btn btn-outline-info btn-sm", style: "padding: 2px 6px; font-size: 0.75rem;" %></td>
          <td><%= button_to "Eliminar", warehouse, method: :delete, class: "btn btn-outline-danger btn-sm", onclick: "return confirm('Seguro?');", style: "padding: 2px 6px; font-size: 0.75rem;" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  

</div>
