<div class="container mt-4">
  <h2>📦 Envios: <%= @po.name %></h2>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Numero de Envio</th>
        <th>Estatus</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @shipments.each do |shipment| %>
        <tr>
          <td><%= shipment.shipment_number %></td>
          <td>
            <% case shipment.status %>
              <% when "Pending" %>
                <%= "⏳ Pendiente de envio" %>
              <% when "In Transit" %>
                <%= "🚚 En Ruta" %>
              <% when "Arrived" %>
                <%= "📥 Recibido" %>
              <% when "Completed" %>
                <% if shipment.has_discrepancies? %>
                  <%= "❗ Completado con diferencias" %>
                <% else %>
                  <%= "✅ Completado" %>
                <% end %>
              <% else %>
                <%= "❓ Unknown" %>
            <% end %>
          </td>

          <td>
            <%= link_to "Ver", shipment_path(shipment), class: "btn btn-info btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
